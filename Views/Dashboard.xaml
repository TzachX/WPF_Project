<UserControl x:Class="Ex1.Views.Dashboard"
             x:Name="dashboardVals"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ex1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <Grid Height="225" Width="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
                <TextBox x:Name="IHD_Text"  Text="Indicated Heading Degree" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Margin="0,22,0,10" Height="25"/>
            <TextBox x:Name="_Txt"  Grid.Column="1" Text="{Binding VM_Heading, Mode=OneWay }" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
            <TextBox x:Name="_Text"  Grid.Column="2" Text="Indicated Altitude" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Height="25" Margin="0,22,0,10"/>
            <TextBox x:Name="_asdt"  Grid.Column="3" Text="{Binding VM_Altitude, Mode=OneWay}" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
            <TextBox x:Name="GIVS_Text" Grid.Row="1" Text="Indicated Vertical Speed" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
            <TextBox x:Name="GIasdVS_Text" Grid.Row="1" Grid.Column="1" Text="{Binding VM_VerticalSpeed, Mode=OneWay}" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
            <TextBox x:Name="GIV_Text" Grid.Row="1" Grid.Column="2" Text="Internal Roll Degree" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Height="25" Margin="0,21,0,10"/>
            <TextBox x:Name="GIadVS_Text" Grid.Row="1" Grid.Column="3" Text="{Binding VM_Roll, Mode=OneWay}" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
            <TextBox x:Name="GIGS_Text" Grid.Row="2" Text="Indicated Ground Speed" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Height="25" Margin="0,21,0,10"/>
            <TextBox x:Name="GIaaVS_Text" Grid.Row="2" Grid.Column="1" Text="{Binding VM_GroundSpeed, Mode=OneWay}" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
            <TextBox x:Name="GIGS_ext" Grid.Row="2" Grid.Column="2" Text="Internal Pitch Degree" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Height="25" Margin="0,21,0,10"/>
            <TextBox x:Name="as" Grid.Row="2" Grid.Column="3" Text="{Binding VM_Pitch, Mode=OneWay}" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
            <TextBox x:Name="IS_Text" Grid.Row="3" Text="Indicated Speed" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Height="25" Margin="0,21,0,10"/>
            <TextBox x:Name="GIasaText" Grid.Row="3" Grid.Column="1" Text="{Binding VM_GroundSpeed, Mode=OneWay}" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
            <TextBox x:Name="IS_Txt" Grid.Row="3" Grid.Column="2" Text="Alt. Indicated Altitude" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Height="25" Margin="0,21,0,10"/>
            <TextBox x:Name="GIaaText" Grid.Row="3" Grid.Column="3" Text="{Binding VM_Altmeter, Mode=OneWay}" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
            <TextBlock x:Name="test" Grid.Row="4" Grid.Column="2" Text="TEST" FontSize="10" TextAlignment="Center" FontWeight="Bold" Background="Transparent" VerticalAlignment="Center"/>
            <TextBox x:Name="ERR" Grid.Row="3" Grid.Column="3" Text="{Binding VM_ErrorList, Mode=OneWay}" FontSize="10" TextAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>

        </Grid>
    </Viewbox>
</UserControl>
